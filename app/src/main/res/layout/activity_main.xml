<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#232323"
            android:textSize="15sp"
            android:gravity="center"
            android:text="支持过程中回滚"/>

        <com.shanjing.revealloyout.view.RevealLayout
            android:id="@+id/reveal_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:rl_allow_revert="true"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="true"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_follow_checked"
            app:rl_uncheck_with_expand="true"
            app:rl_unchecked_layout="@layout/reveal_layout_follow_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:rl_allow_revert="true"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="true"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_follow_checked"
            app:rl_uncheck_with_expand="false"
            app:rl_unchecked_layout="@layout/reveal_layout_follow_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:rl_allow_revert="true"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="false"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_follow_checked"
            app:rl_uncheck_with_expand="true"
            app:rl_unchecked_layout="@layout/reveal_layout_follow_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:rl_allow_revert="true"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="false"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_follow_checked"
            app:rl_uncheck_with_expand="false"
            app:rl_unchecked_layout="@layout/reveal_layout_follow_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:rl_allow_revert="true"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="true"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_like_checked"
            app:rl_uncheck_with_expand="true"
            app:rl_unchecked_layout="@layout/reveal_layout_like_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:rl_allow_revert="true"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="true"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_like_checked"
            app:rl_uncheck_with_expand="false"
            app:rl_unchecked_layout="@layout/reveal_layout_like_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:rl_allow_revert="true"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="false"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_like_checked"
            app:rl_uncheck_with_expand="true"
            app:rl_unchecked_layout="@layout/reveal_layout_like_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:rl_allow_revert="true"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="false"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_like_checked"
            app:rl_uncheck_with_expand="false"
            app:rl_unchecked_layout="@layout/reveal_layout_like_unchecked" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#232323"
            android:textSize="15sp"
            android:gravity="center"
            android:text="不支持过程中回滚"/>

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:rl_allow_revert="false"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="true"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_follow_checked"
            app:rl_uncheck_with_expand="true"
            app:rl_unchecked_layout="@layout/reveal_layout_follow_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:rl_allow_revert="false"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="true"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_follow_checked"
            app:rl_uncheck_with_expand="false"
            app:rl_unchecked_layout="@layout/reveal_layout_follow_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:rl_allow_revert="false"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="false"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_follow_checked"
            app:rl_uncheck_with_expand="true"
            app:rl_unchecked_layout="@layout/reveal_layout_follow_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:rl_allow_revert="false"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="false"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_follow_checked"
            app:rl_uncheck_with_expand="false"
            app:rl_unchecked_layout="@layout/reveal_layout_follow_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:rl_allow_revert="false"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="true"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_like_checked"
            app:rl_uncheck_with_expand="true"
            app:rl_unchecked_layout="@layout/reveal_layout_like_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:rl_allow_revert="false"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="true"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_like_checked"
            app:rl_uncheck_with_expand="false"
            app:rl_unchecked_layout="@layout/reveal_layout_like_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:rl_allow_revert="false"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="false"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_like_checked"
            app:rl_uncheck_with_expand="true"
            app:rl_unchecked_layout="@layout/reveal_layout_like_unchecked" />

        <com.shanjing.revealloyout.view.RevealLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:rl_allow_revert="false"
            app:rl_anim_duration="1000"
            app:rl_check_with_expand="false"
            app:rl_checked="false"
            app:rl_checked_layout="@layout/reveal_layout_like_checked"
            app:rl_uncheck_with_expand="false"
            app:rl_unchecked_layout="@layout/reveal_layout_like_unchecked" />

    </LinearLayout>

</LinearLayout>